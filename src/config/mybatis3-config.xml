<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC
    "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 配置别名 -->
    <typeAliases>

    </typeAliases>

    <!-- 配置环境变量 -->
    <environments default="Game">
        <environment id="Game">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://itgowo.com:3306/game?characterEncoding=utf-8&amp;useSSL=false" />
                <property name="username" value="Game" />
                <property name="password" value="game123" />
            </dataSource>
        </environment>
    </environments>

    <!-- 配置mappers -->
    <mappers>
    </mappers>

</configuration>